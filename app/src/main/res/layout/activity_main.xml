<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.87"
    android:background="@drawable/qw1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texteatapp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="EAT APP"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="130sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonsignup"
        android:layout_width="444dp"
        android:layout_height="84dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:cornerRadius="4dp"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:shadowColor="@color/colorAccent"
        android:shadowEnabled="true"
        android:text="Button"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="27sp"
        android:textStyle="bold|italic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="675dp"
        tools:text="@string/signup" />

    <Button
        android:id="@+id/buttonsignin"
        android:layout_width="444dp"
        android:layout_height="84dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:cornerRadius="4dp"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:shadowColor="@color/colorAccent"
        android:shadowEnabled="true"
        android:text="Button"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="27sp"
        android:textStyle="bold|italic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="789dp"
        tools:text="@string/signin" />


</androidx.constraintlayout.widget.ConstraintLayout>